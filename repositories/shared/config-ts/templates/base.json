{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "target": "ESNext",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "outDir": ".build",
    "baseUrl": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["../../../node_modules"]
}
