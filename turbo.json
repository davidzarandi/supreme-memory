{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "codegen": {
      "inputs": ["templates/**"]
    },
    "format:check": {
      "outputs": ["*.json", "*.tsx", "*.ts", "*.js", "*.md"]
    },
    "format:fix": {
      "outputs": ["*.json", "*.tsx", "*.ts", "*.js", "*.md"]
    }
  },
  "globalDependencies": [
    "/repositories/shared/config-prettier/index.json",
    "/repositories/shared/config-ts/.generated/*.json"
  ]
}
